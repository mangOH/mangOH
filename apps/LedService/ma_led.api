//--------------------------------------------------------------------------------------------------
/**
 * Charging status of battery
 */
//--------------------------------------------------------------------------------------------------
ENUM LedStatus
{
    
    OFF,   ///< The LED is off
    ON,    ///< The LED is on
};

//--------------------------------------------------------------------------------------------------
/**
 * Turns on the LED.
 */
//--------------------------------------------------------------------------------------------------
FUNCTION TurnOn();

//--------------------------------------------------------------------------------------------------
/**
 * Turns off the LED.
 */
//--------------------------------------------------------------------------------------------------
FUNCTION TurnOff();

//--------------------------------------------------------------------------------------------------
/**
 * Provides battery health status
 *
 * @return
 *     LE_OK on success or LE_FAULT on failure.
 *     LE_BAD_PARAMETER for invalid parameter
 */
//--------------------------------------------------------------------------------------------------
FUNCTION LedStatus GetLedStatus();
